<section class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light">Y00ters</h1>
      <p class="lead text-muted">Find y00tlisted people by area of expertise and network with them.</p>
      <div class="row align-items-center">
        <%= form_with url: "/", method: :get do |form| %>
          <%= form.text_field :query, data: { options: @categories_names } %>
          <%= form.submit "Search", class: 'btn btn-primary mt-3' %>
        <% end %>
      </div>
    </div>
  </div>
</section>

<div class="y00ts py-5 bg-secondary">
  <div class="container-fluid">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-6 g-4">
      <%= render @y00ts %>
    </div>

    <div class="row mt-5">
      <div class="col-12">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
  </div>
</div>
